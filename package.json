{
  "name": "Ethos",
  "version": "0.0.3",
  "description": "Ethereum Browser",
  "main": "app://ethos/static/bootstrap.html",
  "node-main": "./lib/server.js",
  "node-remote": "http://eth",
  "chromium-args": "--disable-web-security",
  "window": {
    "show": true,
    "toolbar": true,
    "position": "center",
    "width": 500,
    "height": 500,
    "min_width": 300,
    "min_height": 200
  },
  "inject-js-start": "./static/assets/inject.bundle.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "coffee ./lib/server.coffee",
    "build": "npm install && npm run compile && coffee ./build/build.coffee",
    "build-dev": "npm run compile && nwbuild -r .",
    "compile": "browserify ./lib/inject.js > ./static/assets/inject.bundle.js"
  },
  "repository":{
    "type":"git",
    "url": "git://github.com/d11e9/ethos.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "request": "~2.40.0",
    "jquery": "~2.1.1",
    "express": "~4.8.4",
    "coffee-script": "~1.7.1",
    "jade": "~1.5.0",
    "node-torrent": "~0.2.1"
  },
  "devDependencies": {
    "node-webkit-builder": "~0.1.1",
    "browserify": "~5.10.0"
  }
}
